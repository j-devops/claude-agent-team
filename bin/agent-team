#!/usr/bin/env bash
#
# agent-team - Multi-agent development team launcher
#
# Launches a team of Claude Code agents in tmux to work on a project.

# Get the directory where this script lives
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
AGENT_TEAM_DIR="$(dirname "$SCRIPT_DIR")"

# Check for Python 3
if ! command -v python3 &> /dev/null; then
    echo "Error: python3 is required but not found"
    exit 1
fi

# Check for tmux
if ! command -v tmux &> /dev/null; then
    echo "Error: tmux is required but not found"
    echo "Install with: sudo apt install tmux  # or brew install tmux"
    exit 1
fi

# Check for Claude Code
if ! command -v claude &> /dev/null; then
    echo "Error: claude (Claude Code CLI) is required but not found"
    echo "Install from: https://github.com/anthropics/claude-code"
    exit 1
fi

# Run the orchestrator
exec python3 "$AGENT_TEAM_DIR/orchestrator.py" "$@"
