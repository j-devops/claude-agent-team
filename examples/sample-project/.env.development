# Development Environment Configuration
# This file contains default values for local development
# Copy to .env and customize as needed

NODE_ENV=development

# Database
POSTGRES_USER=taskflow
POSTGRES_PASSWORD=taskflow_dev_password
POSTGRES_DB=taskflow
POSTGRES_PORT=5432
DATABASE_URL=postgresql://taskflow:taskflow_dev_password@localhost:5432/taskflow

# Backend
BACKEND_PORT=3000
JWT_SECRET=dev_jwt_secret_please_change_in_production
JWT_EXPIRES_IN=7d
CORS_ORIGIN=http://localhost:5173

# Frontend
FRONTEND_PORT=5173
VITE_API_URL=http://localhost:3000

# Redis
REDIS_PORT=6379

# Logging
LOG_LEVEL=debug

# Feature Flags
ENABLE_API_RATE_LIMITING=false
ENABLE_METRICS=false
